{% extends 'base.html.twig' %}

{% block title %}Tindoo - Discussion{% endblock %}

{% block body %}
    <style>
        .infos {
            height: 10%;
            border-bottom: 1px solid #e0e0e0;
        }
        .messages {
            height: 80%;
            overflow-y: auto;
            padding: 1rem;
            background-color: #f8f9fa;
        }
        .message-form {
            height: 10%;
            border-top: 1px solid #e0e0e0;
            padding: 1rem;
        }
        .online-indicator {
            width: 10px;
            height: 10px;
            background-color: #28a745; /* Vert pour "en ligne" */
            border-radius: 50%;
            margin-right: 0.5rem;
            animation: pulse 1.5s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.5);
                opacity: 0.6;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        .header-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.5rem 1rem;
            background-color: #f1f1f1;
        }
        .profile-info {
            display: flex;
            align-items: center;
        }
        .profile-info img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }
        .profile-info div {
            margin-left: 0.5rem;
        }
        .profile-info .user-name {
            font-weight: bold;
        }
        .profile-info .status {
            display: flex;
            align-items: center;
            color: #6c757d;
        }
    </style>
    <section class="d-flex w-100 h-100">
        <div class="w-25 h-100 sidebar-wrapper">
            {% include 'home/sidebar.html.twig' %}
        </div>
        <div class="w-75 h-100 bg-white">
            <header class="infos">
                <div class="header-wrapper">
                    <a href="{{ path('app_home_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        {{ 'discussion.goBack'|trans }}
                    </a>

                    <div class="profile-info">
                        <img src="{{ discussion.userTwo.image }}" alt="Profile picture" class="rounded-circle">
                        <div>
                            <div class="user-name">{{ discussion.userTwo.firstname }} {{ discussion.userTwo.lastname }}</div>
                            <div class="status">
                                <span class="online-indicator"></span>{{ 'discussion.online'|trans }}
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            <div class="messages">
                {% for message in discussion.messages %}
                    <div class="message d-flex {% if message.author == user %}justify-content-end{% else %}justify-content-start{% endif %}">
                        <div class="message-content p-2 mb-2 {% if message.author == user %}bg-primary text-white{% else %}bg-light{% endif %} rounded">
                            <div class="message-author">{{ message.author.firstname }} {{ message.author.lastname }}</div>
                            <div class="message-text">{{ message.content }}</div>
                            <div class="message-date text-muted small">{{ message.getCreationDate|date('Y-m-d H:i') }}</div>
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="message-form">
                <form action="{{ path('app_discussion_send') }}" method="post" class="d-flex gap-2">
                    <input type="hidden" name="discussion_id" value="{{ discussion.id }}">
                    <input type="text" name="message" class="form-control" placeholder="Type a message">
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
