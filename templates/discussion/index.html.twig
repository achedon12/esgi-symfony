{% extends 'base.html.twig' %}

{% block title %}Tindoo - Discussion{% endblock %}

{% block body %}
    <style>
        .infos {
            height: 10%;
            border-bottom: 1px solid #e0e0e0;
        }
        .messages {
            height: 80%;
            overflow-y: auto;
            padding: 1rem;
            background-color: #f2f2f2;
        }

        .message {
            max-width: 50%;
            border-radius: 15px;
            word-break: break-word;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            position: relative;
        }

        .user-message {
            background-color: #007bff;
            color: white;
            align-self: flex-end;
        }

        .other-message {
            background-color: #e9ecef;
            color: #212529;
            align-self: flex-start;
        }

        .message-author {
            color: #495057;
        }

        .message-content {
            font-size: 1rem;
            line-height: 1.5;
        }

        .message-date {
            font-size: 0.8rem;
            color: white;
        }

        .discussion-container img {
            border: 2px solid white;
            top: -15px;
            right: -15px;
        }
        .message {
            word-break: break-word;
            max-width: 50%;
        }
        .message-form {
            height: 10%;
            border-top: 1px solid #e0e0e0;
            padding: 1rem;
        }
        .online-indicator {
            width: 10px;
            height: 10px;
            background-color: #28a745;
            border-radius: 50%;
            margin-right: 0.5rem;
            animation: pulse 1.5s infinite;
        }
        @keyframes pulse {
            0% {
                transform: scale(1);
                opacity: 1;
            }
            50% {
                transform: scale(1.5);
                opacity: 0.6;
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }
        .header-wrapper {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0.5rem 1rem;
            background-color: #f1f1f1;
        }
        .profile-info {
            display: flex;
            align-items: center;
        }
        .profile-info img {
            width: 50px;
            height: 50px;
            object-fit: cover;
        }
        .profile-info div {
            margin-left: 0.5rem;
        }
        .profile-info .user-name {
            font-weight: bold;
        }
        .profile-info .status {
            display: flex;
            align-items: center;
            color: #6c757d;
        }
        .toApproveMessages {
            position: relative;
        }

        .toApproveMessages::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.2);
            z-index: 10;
            pointer-events: none;
        }

        .toApproveMessages .messages,
        .toApproveMessages .message-form {
            pointer-events: none;
        }
    </style>
    <section class="d-flex w-100 h-100">
        <div class="w-25 h-100 sidebar-wrapper">
            {% include 'home/sidebar.html.twig' %}
        </div>
        <div class="w-75 h-100 bg-white discussion-container">
            <header class="infos p-0">
                <div class="header-wrapper">
                    <a href="{{ path('app_home_index') }}" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i>
                        {{ 'discussion.goBack'|trans }}
                    </a>

                    <div class="profile-info">
                        {% if discussion.userTwo.image[0] %}
                            <a href="{{ path('app_user_show', {id: discussion.userTwo.id, redirect_url: path('app_discussion_index', {id: discussion.id})}) }}">
                                {% if discussion.userTwo.image[0] starts with 'people_images/' %}
                                    <img src="{{ asset(discussion.userTwo.image[0]) }}" alt="{{ discussion.userTwo.firstname }}" class="rounded-5"/>
                                {% elseif discussion.userTwo.image[0] starts with 'https' or discussion.userTwo.image[0] starts with 'http' %}
                                    <img src="{{ discussion.userTwo.image[0] }}" alt="{{ discussion.userTwo.firstname }}" class="rounded-5"/>
                                {% else %}
                                    <img src="{{ asset('uploads/profile_images/' ~ discussion.userTwo.image[0]) }}" alt="Profile Picture" class="rounded-5">
                                {% endif %}
                            </a>
                        {% endif %}
                        <div>
                            <div class="user-name">{{ discussion.userTwo.firstname }} {{ discussion.userTwo.lastname }}</div>
                            <div class="status">
                                <span class="online-indicator"></span>{{ 'discussion.online'|trans }}
                            </div>
                        </div>
                    </div>
                </div>
            </header>

            {% if discussion.isApproved == false and isCurrentUserDemanding == false %}
                <div class="alert alert-warning d-flex justify-content-between align-items-center">
                    <p class="mb-0">Discussion is not approved yet</p>
                    <div>
                        <form action="{{ path('app_discussion_manage') }}" method="POST" class="d-inline">
                            <input type="hidden" name="action" value="{{ 1 }}">
                            <input type="hidden" name="discussion_id" value="{{ discussion.id }}">
                            <button type="submit" class="btn btn-outline-warning">Approve</button>
                        </form>
                        <form action="{{ path('app_discussion_manage') }}" method="POST" class="d-inline">
                            <input type="hidden" name="action" value="{{ 0 }}">
                            <input type="hidden" name="discussion_id" value="{{ discussion.id }}">
                            <button type="submit" class="btn btn-danger">Decline</button>
                        </form>
                    </div>
                </div>
            {% endif %}
            <div class="messages {% if discussion.isApproved == false and isCurrentUserDemanding == false %}toApproveMessages{% endif %}">
                {% for message in discussion.messages %}
                    <div class="d-flex {% if message.author == user %}justify-content-end{% else %}justify-content-start{% endif %} mb-3">
                        <div class="message p-3 {% if message.author == user %}user-message{% else %}other-message{% endif %} position-relative">
                            <div class="message-content mb-2">
                                {{ message.content }}
                            </div>
                            <div class="message-date small fw-bold {% if message.author == user %} text-white{% else %} text-muted {% endif %}">
                                {{ message.getCreationDate|date('Y-m-d H:i') }}
                            </div>
                            {% if message.author.image %}
                                {% if message.author.image starts with 'people_images/' %}
                                    <img src="{{ asset(message.author.image) }}" alt="{{ message.author.firstname }}" class="rounded-circle position-absolute"
                                         style="width: 30px; height: 30px; top: -15px; right: -15px; border: 2px solid white;"/>
                                {% elseif message.author.image starts with 'https' or message.author.image starts with 'http' %}
                                    <img src="{{ message.author.image }}" alt="Author's profile picture"
                                         class="rounded-circle position-absolute"
                                         style="width: 30px; height: 30px; top: -15px; right: -15px; border: 2px solid white;">
                                {% else %}
                                    <img src="{{ asset('uploads/profile_images/' ~ message.author.image[0]) }}" alt="Profile Picture" class="rounded-circle position-absolute"
                                         style="width: 30px; height: 30px; top: -15px; right: -15px; border: 2px solid white;">
                                {% endif %}
                            {% endif %}

                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="message-form {% if discussion.isApproved == false and isCurrentUserDemanding == false %}toApproveMessages{% endif %}">
                <form action="{{ path('app_discussion_send') }}" method="post" class="d-flex gap-2">
                    <input type="hidden" name="discussion_id" value="{{ discussion.id }}">
                    <input type="text" name="message" class="form-control" placeholder="Type a message" {% if discussion.isApproved == false and isCurrentUserDemanding == false %}disabled{% endif %}>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
