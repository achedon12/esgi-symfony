{% extends 'base.html.twig' %}

{% block title %}Tindoo{% endblock %}

{% block body %}
    <a href="{{ path('app_home_index') }}" class="position-absolute m-4 z-3">
        <button class="btn btn-info">Back</button>
    </a>
    {% if suggestedUser %}
        <div class="suggest--card">
            {% if suggestedUser.image and suggestedUser.image[0] %}
                {% if suggestedUser.image[0] starts with 'people_images/' %}
                    <img src="{{ asset(suggestedUser.image[0]) }}" alt="user_image_{{ suggestedUser.id }}"/>
                {% else %}
                    <img src="{{ asset('uploads/profile_images/' ~ suggestedUser.image[0]) }}"
                         alt="user_image_{{ suggestedUser.id }}">
                {% endif %}
            {% endif %}
            <div class="d-flex flex-column p-4">
                <h3>{{ suggestedUser.firstname }}, {{ suggestedUser.age }} {{ 'profile.years'|trans }}</h3>
                <p><strong>Biography : </strong>{{ suggestedUser.bio }}</p>
                <p><strong>Distance : </strong>{{ distance }} kms</p>
                <p><strong>Birthdate : </strong>{{ suggestedUser.birthdate|date('d m Y') }}</p>
                <p><strong>Interests: </strong>
                    {% for interest in suggestedUser.interests %}
                        <span class="badge bg-primary">{{ interest }}</span>
                    {% endfor %}
                </p>
            </div>
        </div>
    {% endif %}
{% endblock %}
