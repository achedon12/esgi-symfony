{% extends 'base.html.twig' %}

{% block title %}Account Verified{% endblock %}

{% block body %}
    <div class="verified-container">
        <div class="icon-success">
            <i class="fas fa-check-circle"></i>
        </div>
        <h1>Account Verified</h1>
        <p>{{ 'verifiedAccount'|trans }}</p>
        <a href="{{ path('app_login') }}" class="btn">Go to Login</a>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .verified-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .verified-container h1 {
            font-size: 2.5rem;
            color: #28a745;
            margin-bottom: 20px;
        }

        .verified-container p {
            font-size: 1.2rem;
            color: #6c757d;
            margin-bottom: 30px;
        }

        .verified-container .btn {
            display: inline-block;
            padding: 10px 20px;
            font-size: 1rem;
            font-weight: bold;
            color: white;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .verified-container .btn:hover {
            background-color: #0056b3;
        }

        .icon-success {
            font-size: 4rem;
            color: #28a745;
            margin-bottom: 20px;
        }
    </style>
{% endblock %}