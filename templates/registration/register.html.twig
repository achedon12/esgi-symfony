{% extends 'base.html.twig' %}

{% block title %}{{ 'register.title'|trans }}{% endblock %}

{% block body %}

    <div class="register-form-container">
        <h1 class="m-5">{{ 'register.title'|trans }}</h1>
        <div class="login-form">
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm, {'attr': {'class': 'needs-validation'}}) }}

            <div class="form-group mb-3">
                {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
                {{ form_errors(registrationForm.email) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Create a password'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
            </div>

            <div class="form-group mb-3">
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_errors(registrationForm.agreeTerms) }}
            </div>

            <button type="submit" class="btn btn-primary w-100">{{ 'register.title'|trans }}</button>
            {{ form_end(registrationForm) }}
        </div>
        <div class="text-center mt-3">
            <a href="{{ path('app_login') }}" class="text-decoration-none">{{ 'register.login'|trans }}</a>
        </div>
    </div>
{% endblock %}