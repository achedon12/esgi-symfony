{% extends 'base.html.twig' %}

{% block title %}Change Password{% endblock %}

{% block body %}
    <div class="change-password-container">
        <h1>{{ 'profile.changePassword'|trans }}</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger mt-4">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(updatePasswordForm) }}
            <div class="form-group">
                {{ form_label(updatePasswordForm.currentPassword) }}
                {{ form_widget(updatePasswordForm.currentPassword) }}
                {{ form_errors(updatePasswordForm.currentPassword) }}
            </div>
            <div class="form-group">
                {{ form_label(updatePasswordForm.newPassword) }}
                {{ form_widget(updatePasswordForm.newPassword) }}
                {{ form_errors(updatePasswordForm.newPassword) }}
            </div>
            <div class="form-group">
                {{ form_label(updatePasswordForm.confirmNewPassword) }}
                {{ form_widget(updatePasswordForm.confirmNewPassword) }}
                {{ form_errors(updatePasswordForm.confirmNewPassword) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn  btn-primary">{{ 'profile.changePassword'|trans }}</button>
                <a href="{{ path('app_profile_index') }}" class="btn btn-secondary">{{ 'cancel'|trans }}</a>
            </div>
        {{ form_end(updatePasswordForm) }}
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        .change-password-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .form-group {
            margin-bottom: 15px;
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
        }
        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }
        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
        }
        .btn:hover {
            background-color: #0056b3;
        }
    </style>
{% endblock %}