{% extends 'profile/profileBase.html.twig' %}

{% block title %}Offres{% endblock %}

{% block section %}
    <h1 class="text-primary text-center offer-title">Choisissez votre offre !</h1>
    <div class="row mt-5 mx-auto offer-grid w-100">
        <div class="col">
            <h2 class="text-center">Basic</h2>
            <div class="info">
                <p>➕ 20 likes / jour </p>
                <p>❌ Pas de messages direct </p>
                <p>💰 FREE </p>
            </div>
            {% if app.user.offer.name == 'Basic' %}
                <div class="d-flex justify-content-center mt-5">
                    <div class="check-succes bg-success">
                        <i class="fa-solid fa-check fs-4 text-light"></i>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col">
            <h2 class="text-center">🔹 Premium 🔹</h2>
            <div class="info">
                <p>➕ 50 likes / jour </p>
                <p>➕ 5 messages direct / jour </p>
                <p>💰 9.99€ / mois </p>
            </div>
            {% if app.user.offer.name == 'Premium' %}
                <div class="d-flex justify-content-center mt-5">
                    <div class="check-succes bg-success">
                        <i class="fa-solid fa-check fs-4 text-light"></i>
                    </div>
                </div>
            {% elseif app.user.offer.name == 'Basic' %}
                <div class="d-flex justify-content-center mt-5">
                    <div class="check-succes">
                        <form action="{{ path('app_offer_pay') }}" method="POST" class="d-inline">
                            <input type="hidden" name="offer_id" value="{{ 2 }}">
                            <button type="submit" class="btn btn-outline-info fs-4">Choisir</button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
        <div class="col">
            <h2 class="text-center">✨ Pro ✨</h2>
            <div class="info">
                <p>✅ Like illimité </p>
                <p>✅ Messages direct illimité </p>
                <p>💰 19.99€ / mois </p>
            </div>
            {% if app.user.offer.name == 'Pro' %}
                <div class="d-flex justify-content-center mt-5">
                    <div class="check-succes bg-success">
                        <i class="fa-solid fa-check fs-4 text-light"></i>
                    </div>
                </div>
            {% elseif app.user.offer.name == 'Basic' or app.user.offer.name == 'Premium' %}
                <div class="d-flex justify-content-center mt-5">
                    <div class="check-succes">
                        <form action="{{ path('app_offer_pay') }}" method="POST" class="d-inline">
                            <input type="hidden" name="offer_id" value="{{ 3 }}">
                            <button type="submit" class="btn btn-outline-warning fs-4">Choisir</button>
                        </form>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>

{% endblock %}