{% extends 'base.html.twig' %}

{% block title %}Profile Settings{% endblock %}

{% block body %}
    <section class="d-flex w-100 h-100">
        <div class="w-25 h-100 sidebar-wrapper">
            {% include 'home/sidebar.html.twig' %}
        </div>
        <div class="w-75 swipe-wrapper overflow-auto">
            <header class="d-flex row align-content-end w-100">
                <div class="col-12 d-flex justify-content-between align-items-center">
                    <a href="{{ path('app_profile_index') }}" class="btn btn-link"><i class="fas fa-arrow-left fa-lg"></i> Back</a>
                    <h2 class="text-primary">Profile Settings</h2>
                </div>
            </header>
            <div class="profile-container">
                <div class="profile-header">
                    <div class="profile-avatar">
                        {% if user.image[0] %}
                            {% if user.image[0] starts with 'people_images/' %}
                                <img src="{{ asset(user.image[0]) }}" alt="{{ user.firstname }}"/>
                            {% elseif user.image[0] starts with 'https' or user.image[0] starts with 'http' %}
                                <img src="{{ user.image[0] }}" alt="{{ user.firstname }}"/>
                            {% else %}
                                <img src="{{ asset('uploads/profile_images/' ~ user.image[0]) }}" alt="Profile Picture">
                            {% endif %}
                        {% endif %}
                    </div>
                    <div class="profile-info">
                        <h3>{{ app.user.firstname }} {{ app.user.lastname }}</h3>
                        <p>{{ app.user.email }}</p>
                    </div>
                </div>

                <div class="profile-actions">
                    <h4>{{ 'profile.account.settings'|trans }}</h4>
                    <div class="action-buttons">
                        <a href="{{ path('app_profile_update_password') }}" class="btn btn-outline-primary">
                            <i class="fas fa-lock"></i> {{ 'profile.changePassword'|trans }}
                        </a>
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                            <i class="fas fa-sign-out-alt"></i> {{ 'logout'|trans }}
                        </a>
                    </div>
                </div>

                <div class="language-settings">
                    <h4>{{ 'profile.account.language'|trans }}</h4>
                    <form action="{{ path('app_profile_update_language') }}" method="post" class="form-inline">
                        <label for="language" class="mr-2"></label>
                        <select name="language" id="language" class="form-control mr-2">
                            {% for language in availableLanguages %}
                                <option value="{{ language.value }}" {% if language.value == user.language %}selected{% endif %}>{{ language.value }}</option>
                            {% endfor %}
                        </select>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-language"></i> {{'profile.changeLanguage'|trans }}
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .profile-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .profile-avatar img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 3px solid #007bff;
            margin-right: 20px;
        }

        .profile-info h3 {
            font-size: 1.6rem;
            font-weight: 600;
            color: #333;
        }

        .profile-info p {
            font-size: 1rem;
            color: #777;
        }

        .profile-actions h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #333;
        }

        .action-buttons a {
            display: inline-block;
            margin-right: 15px;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .action-buttons a:hover {
            background-color: #f0f0f0;
        }

        .language-settings h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #333;
        }

        .form-inline {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .form-inline select {
            margin-right: 15px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-outline-primary {
            border: 1px solid #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-outline-danger {
            border: 1px solid #dc3545;
            color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-link {
            color: #007bff;
            text-decoration: none;
        }

        .btn-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
