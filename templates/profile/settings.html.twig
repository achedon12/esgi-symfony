{% extends 'profile/profileBase.html.twig' %}

{% block title %}Profile Settings{% endblock %}

{% block section %}
    <div class="profile-container">
        <div class="profile-header">
            <div class="profile-avatar">
                {% if app.user.image and app.user.image[0] %}
                    {% if app.user.image[0] starts with 'people_images/' %}
                        <img src="{{ asset(app.user.image[0]) }}" alt="{{ app.user.firstname }}"/>
                    {% elseif app.user.image[0] starts with 'https' or app.user.image[0] starts with 'http' %}
                        <img src="{{ app.user.image[0] }}" alt="{{ app.user.firstname }}"/>
                    {% else %}
                        <img src="{{ asset('uploads/profile_images/' ~ app.user.image[0]) }}" alt="Profile Picture">
                    {% endif %}
                {% endif %}
            </div>
            <div class="profile-info">
                <h3>{{ app.user.firstname }} {{ app.user.lastname }}</h3>
                <p>{{ app.user.email }}</p>
            </div>
        </div>

        <div class="profile-actions">
            <h4>{{ 'profile.account.settings'|trans }}</h4>
            <div class="action-buttons">
                <a href="{{ path('app_profile_update_password') }}" class="btn btn-outline-primary">
                    <i class="fas fa-lock"></i> {{ 'profile.changePassword'|trans }}
                </a>
                <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt"></i> {{ 'logout'|trans }}
                </a>
            </div>
        </div>

        <div class="language-settings">
            <h4>{{ 'profile.account.language'|trans }}</h4>
            <form action="{{ path('app_profile_update_language') }}" method="post" class="form-inline">
                <label for="language" class="mr-2"></label>
                <select name="language" id="language" class="form-control mr-2">
                    {% for language in availableLanguages %}
                        <option value="{{ language.value }}" {% if language.value == app.user.language %}selected{% endif %}>{{ language.value }}</option>
                    {% endfor %}
                </select>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-language"></i> {{'profile.changeLanguage'|trans }}
                </button>
            </form>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .profile-container {
            max-width: 900px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 30px;
        }

        .profile-avatar img {
            width: 120px;
            height: 120px;
            object-fit: cover;
            border: 3px solid #007bff;
            margin-right: 20px;
        }

        .profile-info h3 {
            font-size: 1.6rem;
            font-weight: 600;
            color: #333;
        }

        .profile-info p {
            font-size: 1rem;
            color: #777;
        }

        .profile-actions h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #333;
        }

        .action-buttons a {
            display: inline-block;
            margin-right: 15px;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .action-buttons a:hover {
            background-color: #f0f0f0;
        }

        .language-settings h4 {
            font-size: 1.3rem;
            margin-bottom: 15px;
            color: #333;
        }

        .form-inline {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .form-inline select {
            margin-right: 15px;
        }

        .btn {
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 5px;
            transition: background-color 0.3s ease;
        }

        .btn-outline-primary {
            border: 1px solid #007bff;
            color: #007bff;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-outline-danger {
            border: 1px solid #dc3545;
            color: #dc3545;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .btn-link {
            color: #007bff;
            text-decoration: none;
        }

        .btn-link:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}
