{% extends 'base.html.twig' %}

{% block title %}Offres{% endblock %}

{% block body %}
    <section class="d-flex w-100 h-100">
        <div class="w-25 h-100 sidebar-wrapper">
            {% include 'home/sidebar.html.twig' %}
        </div>
        <div class="w-75 swipe-wrapper overflow-auto">
            <header class="d-flex row align-content-end w-100">
                <div class="col-12 d-flex justify-content-between align-items-center profile-header">
                    <a href="{{ path('app_profile_offer') }}"><i class="fas fa-arrow-left fa-xl"></i></a>
                    <i class="fas fa-user fa-xl text-primary text-center"></i>
                </div>
            </header>
            <h1 class="text-primary text-center mb-4 mt-3">Paiement</h1>
            <div class="cb-card">
                <div class="cb-card-front z-index">
                    <form id="payment-form" action="{{ path('app_profile_offer_change') }}" method="POST" class="d-inline">
                        <input type="hidden" name="offer_id" value="{{ offer_id }}">
                        <div class="input-card-number">
                            <input id="card-number" class="card-input" type="text" maxlength="26" placeholder="4587 XXXX XXXX XXXX" size="19" required>
                            <input id="card-cvc" type="text" class="card-input" size="4" placeholder="2XX" required>
                        </div>
                        <div class="input-card-info">
                            <input id="card-name" type="text" class="card-input" placeholder="John Smith" size="20" required>
                            <input id="card-expiry" type="text" class="card-input" placeholder="12/2023" size="7" required>
                        </div>
                    </form>
                </div>
            </div>
            <div class="d-flex justify-content-center mt-5">
                <a href="{{ path('app_profile_offer') }}" class="btn btn-outline-info fs-4 mx-5">Retour</a>
                <form action="{{ path('app_profile_offer_change') }}" method="POST" class="d-inline">
                    <input type="hidden" name="offer_id" value="{{ offer_id }}">
                    <button type="submit" class="btn btn-warning fs-4 mx-5">Payer</button>
                </form>
            </div>
        </div>
    </section>

{% endblock %}
