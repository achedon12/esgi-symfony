{% extends 'base.html.twig' %}

{% block title %}Offres{% endblock %}

{% block body %}
<section class="d-flex w-100 h-100">
    <div class="w-25 h-100 sidebar-wrapper">
        {% include 'home/sidebar.html.twig' %}
    </div>
    <div class="w-75 swipe-wrapper overflow-auto">
        <header class="d-flex row align-content-end w-100">
            <div class="col-12 d-flex justify-content-between align-items-center profile-header">
                <a href="{{ path('app_home_index') }}"><i class="fas fa-arrow-left fa-xl"></i></a>
                <i class="fas fa-user fa-xl text-primary text-center"></i>
                <a href="/offer"><i class="fas fa-fire fa-xl"></i></a>
            </div>
        </header>
        <h1 class="text-primary text-center m-4">Choisissez votre offre !</h1>
        <div class="row mt-5 mx-auto offer-grid w-100">
            <div class="col">
                <h2 class="text-center">Basic</h2>
                <div class="info">
                    <p>➕ 20 likes / jour </p>
                    <p>❌ Pas de messages direct </p>
                </div>
                {% if user.offer.name == 'Basic' %}
                    <p>Choisi</p>
                {% endif %}
            </div>
            <div class="col">
                <h2 class="text-center">🔹 Premium 🔹</h2>
                <div class="info">
                    <p>➕ 50 likes / jour </p>
                    <p>➕ 5 messages direct / jour </p>
                </div>
                {% if user.offer.name == 'Premium' %}
                    <p>Choisi</p>
                {% endif %}
            </div>
            <div class="col">
                <h2 class="text-center">✨ Pro ✨</h2>
                <div class="info">
                    <p>✅ Like illimité </p>
                    <p>✅ Messages direct illimité </p>
                </div>
                {% if user.offer.name == 'Pro' %}
                    <p>Choisi</p>
                {% endif %}
            </div>
        </div>
    </div>
</section>

{% endblock %}