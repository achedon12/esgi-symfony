{% extends 'base.html.twig' %}

{% block title %}Tindoo - {{ 'pages.profile'|trans }}{% endblock %}

{% block body %}
    <section class="d-flex w-100 h-100">
        <div class="w-25 h-100 sidebar-wrapper">
            {% include 'home/sidebar.html.twig' %}
        </div>
        <div class="w-75 swipe-wrapper overflow-auto">
            <header class="d-flex row align-content-end w-100 p-3 border-bottom">
                <div class="col-12 d-flex justify-content-between align-items-center profile-header">
                    <a href="{{ app.request.attributes.get('_route') == 'app_profile_index' ? path('app_home_index') : path('app_profile_index') }}"><i class="fas fa-xl {{ app.request.attributes.get('_route') == 'app_profile_index' ? 'fa-home' : 'fa-arrow-left' }}"></i></a>
                    <a href="{{ path('app_offer_index') }}"><i class="fas fa-fire fa-xl"></i></a>
                </div>
            </header>
            {% block section %}{% endblock %}
        </div>
    </section>
{% endblock %}